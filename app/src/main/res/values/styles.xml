<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- ************************************************************* -->
    <!-- Application -->
    <!-- ************************************************************* -->
    
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <!-- ************************************************************* -->
    <!-- LoginTheme -->
    <!-- ************************************************************* -->
    
    <style name="LoginTheme" parent="AppBaseTheme">
        <item name="android:background">#1D7AB2</item>
    </style>
    
    <style name="LoginTheme.BtnTab">
        <item name="android:background">@drawable/logn_tab_selector</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    
    <style name="LoginTheme.FormLayout">
		<item name="android:background">@drawable/login_box_border</item>
		<item name="android:padding">12dp</item>        
    </style>
    
    <!-- ************************************************************* -->
    <!-- Tabs -->
    <!-- ************************************************************* -->
    
    <style name="TabLayoutTheme">
        <item name="android:background">@drawable/tab_border</item>
    </style>
    
    <style name="TabTheme" parent="android:Widget.Holo.Light.ActionBar.TabView">
        
    </style>
    
    <style name="TabTextTheme" parent="android:Widget.Holo.Light.ActionBar.TabText">
        
    </style>
    
    <!-- ************************************************************* -->
    <!-- Notifications -->
    <!-- ************************************************************* -->
    
    <style name="AppTheme.Notif">
    </style>
    
    <style name="AppTheme.Notif.Id">
 		<item name="android:background">@drawable/id_background</item>
 		<item name="android:paddingTop">@dimen/standard_v_padding_s</item>
 		<item name="android:paddingBottom">@dimen/standard_v_padding_s</item>
 		<item name="android:paddingLeft">@dimen/standard_h_padding_s</item>
 		<item name="android:paddingRight">@dimen/standard_h_padding_s</item>
 		<item name="android:textSize">@dimen/font_s</item>       
    </style>
    
    <style name="AppTheme.Notif.Title">
        <item name="android:textSize">@dimen/font_l</item>
    </style>
    
    <style name="AppTheme.Notif.Time">
        <item name="android:textSize">@dimen/font_s</item>
        <item name="android:textColor">#808080</item>
    </style>
    
    <!-- ************************************************************* -->
    <!-- Ticket List -->
    <!-- ************************************************************* -->
    
    <style name="AppTheme.TicketList" parent="AppTheme.Notif">
    </style>
    
    <style name="AppTheme.TicketList.Id" parent="AppTheme.Notif.Id">
    </style>
    
    <style name="AppTheme.TicketList.Title" parent="AppTheme.Notif.Title">
    </style>
    
    <style name="AppTheme.TicketList.Time" parent="AppTheme.Notif.Time">
    </style>

</resources>
